<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/llepisode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            style="@style/matchwrap"
            android:layout_width="181dp"
            android:layout_margin="2dp"
            android:layout_height="190dp"
            android:background="@color/black">
            <androidx.cardview.widget.CardView
                style="@style/matchwrap"
                android:layout_width="181dp"
                android:background="@color/black"
                android:layout_height="190dp"
                app:cardCornerRadius="4dp"
                android:padding="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/ivMovies"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:scaleType="fitXY"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:src="@drawable/home_12"
                    android:background="@color/black"/>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/episode"
                style="@style/wrapwrap"
                android:text="Episode 1"
                android:textSize="@dimen/text_size_sixteen"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_ten" />

            <TextView
                android:id="@+id/description"
                style="@style/wrapwrap"
                android:text="This is dummy text description of episodes of the season 1"
                android:textSize="@dimen/text_size_sixteen"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_five"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/time"
                style="@style/wrapwrap"
                android:textSize="@dimen/text_size_thirteen"
                android:text="time"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:layout_margin="@dimen/margin_ten"/>
        </LinearLayout>

    </LinearLayout>


</layout>