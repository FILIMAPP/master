<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/matchwrap"
        android:background="@color/black">


        <RelativeLayout
            style="@style/matchmatch">

            <ImageButton
                android:id="@+id/ibBack"
                style="@style/wrapwrap"
               android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="@null"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/margin_eight"
                android:paddingBottom="@dimen/margin_eight"/>

            <ImageView
                android:id="@+id/ivappIcon"
                style="@style/wrapwrap"
                android:layout_toRightOf="@id/ibBack"
                android:src="@drawable/ic_launcher"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ibBack" />

            <TextView
                android:id="@+id/tvsubscribe"
                style="@style/wrapwrap"
                android:textSize="@dimen/text_size_sixteen"
                android:textColor="@color/yellow"
                android:text="@string/subscribe"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ivappIcon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/wrapwrap"
                android:textSize="@dimen/text_size_sixteen"
                android:textColor="@color/fontColor"
                android:layout_centerInParent="true"/>


            <ImageButton
                android:id="@+id/ibSearch"
                style="@style/wrapwrap"
                android:src="@drawable/ic_baseline_search_24"
                android:background="@null"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/margin_ten"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/skip"
                style="@style/wrapwrap"
                android:textSize="@dimen/text_size_fifteen"
                android:textColor="@color/fontColor"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/margin_ten"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
</layout>